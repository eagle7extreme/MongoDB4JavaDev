use hw53

db.students.aggregate([

{
	$unwind:'$scores'
},
{
	$match:{
		'scores.type': { $in: [ 'exam', 'homework' ] }
	}
}, 
{
	$group:{
		_id: {
			student:'$student_id', 	
			class: '$class_id'	
		},
		avg: {'$avg': '$scores.score' } 

	}
}, 

{
	$group: {
		_id: {
			class: '$_id.class'		
		}	,
		avg: {$avg: '$avg'}
	}
},
{
	$sort: {avg: 1}
}
])
